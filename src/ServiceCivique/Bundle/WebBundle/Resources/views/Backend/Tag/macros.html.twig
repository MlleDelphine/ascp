{% macro table(tags) %}
{% import 'ServiceCiviqueWebBundle:Frontend/Mission:macros.html.twig' as macros %}
{% import 'ServiceCiviqueWebBundle:Macros:buttons.html.twig' as buttons %}
{% import 'ServiceCiviqueWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if tags | length != 0 %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('title', 'Titre') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sortable">
        {% for tag in tags %}
        <tr>
            <td>{{ tag.title }}</td>
            <td>
                <div class="pull-right">
                    {{ buttons.edit(path('service_civique_backend_tag_update', {'id': tag.id})) }}
                    {{ buttons.delete(path('service_civique_backend_tag_delete', {'id': tag.id})) }}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
    {{ alerts.info('service_civique.tag.no_results' | trans) }}
{% endif %}
{% endmacro %}
