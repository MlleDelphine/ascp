{% extends "ServiceCiviqueWebBundle::layout_sidebar_left.html.twig" %}

{% import 'ServiceCiviqueWebBundle:Macros:buttons.html.twig' as buttons %}
{% from 'ServiceCiviqueWebBundle:Frontend/Macros:misc.html.twig' import pagination %}
{% from 'ServiceCiviqueWebBundle:Frontend/Advantage:macros.html.twig' import table %}
{% from 'ServiceCiviqueWebBundle:Frontend/Macros:misc.html.twig' import breadcrumb %}

{% block breadcrumb_content %}
{{ breadcrumb([
    {'route': 'service_civique_homepage', 'name' : 'service_civique.breadcrumb.home'},
    {'name' : 'service_civique.breadcrumb.newsletter' },
]) }}
{% endblock %}

{% block main_content_header %}
    Inscription Ã  la newsletter
{% endblock %}

{% block main_content_body %}
    {{ form_start(form)}}
        <fieldset class="form-group">
            <div class="row">
                <div class="form-group form-group-firstname col-md-6 col-sm-6">
                    {{ form_label(form.firstName) }}
                    {{ form_errors(form.firstName) }}
                    {{ form_widget(form.firstName) }}
                </div>
                <div class="form-group form-group-lastname col-md-6 col-sm-6">
                    {{ form_label(form.lastName) }}
                    {{ form_errors(form.lastName) }}
                    {{ form_widget(form.lastName) }}
                </div>
            </div>
            {{ form_row(form.email) }}
            {{ form_row(form.role) }}
            {{ form_row(form.organizationName) }}
            <div class="form-group form-group-isNewsletterSubscribed">
                {{ form_errors(form.isNewsletterSubscribed) }}
                {{ form_widget(form.isNewsletterSubscribed) }}
            </div>
            <div class="form-group form-group-isNewsletterVolunteerSubscribed">
                {{ form_errors(form.isNewsletterVolunteerSubscribed) }}
                {{ form_widget(form.isNewsletterVolunteerSubscribed) }}
            </div>
            {{ form_row(form.location.country) }}
            <div class="row">
                <div class="form-group form-group-zipCode col-md-4 col-sm-4">
                    {{ form_label(form.location.zipCode) }}
                    {{ form_errors(form.location.zipCode) }}
                    {{ form_widget(form.location.zipCode) }}
                </div>
                <div class="form-group form-group-city col-md-8 col-sm-8">
                    {{ form_label(form.location.city) }}
                    {{ form_errors(form.location.city) }}
                    {{ form_widget(form.location.city) }}
                </div>
            </div>
            {{ form_row(form.location.address) }}
        </fieldset>
        {{ form_row(form._token) }}
        <div>
            <input type="submit" class="btn btn-sc-red" value="Valider" />
        </div>
    {{ form_end(form)}}
{% endblock %}

{% block sidebar %}
    {% include 'ServiceCiviqueWebBundle:Frontend/Default:_sidebar.html.twig' %}
{% endblock %}

