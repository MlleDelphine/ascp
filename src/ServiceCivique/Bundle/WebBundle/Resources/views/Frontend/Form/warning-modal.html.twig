<div class="modal fade" id="warning-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" style="display: inline-block">{{ 'sylius.confirmation.title'|trans }}</h4>
            </div>
            <div class="modal-body">
                <p class="warning-approved">{{ 'service_civique.organization.registration.warning.approved'|trans }}</p>
                <p class="warning-host">{{ 'service_civique.organization.registration.warning.host'|trans }}</p>
                <p class="warning-final">{{ 'service_civique.organization.registration.warning.final'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>